<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="130dp"
    android:layout_width="match_parent"
    android:layout_marginVertical="15dp"
    >

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="125dp"
        android:backgroundTint="#22293E"
        app:cardCornerRadius="10dp"
        android:layout_gravity="bottom"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp"
        >

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:backgroundTint="#1E2332"
            app:cardCornerRadius="10dp">


            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="10dp"
                app:cardCornerRadius="10dp">

                <ImageView
                    android:layout_width="53dp"
                    android:layout_height="56dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/img" />

            </androidx.cardview.widget.CardView>



            <TextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="79dp"
                android:layout_marginTop="10dp"
                android:text="Pro Health Protect"
                android:textColor="@color/white"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/max_money"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="79dp"
                android:layout_marginTop="31dp"
                android:text="₹ 5.5 L"
                android:textColor="@color/white"
                android:textSize="17sp" />

            <TextView
                android:id="@+id/slogan"
                android:layout_width="123dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="79dp"
                android:layout_marginTop="55dp"
                android:text="Term Insurance Calculator"
                android:textColor="#808191"
                android:textSize="10sp" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/buy_btn"
                android:layout_width="70dp"
                android:layout_height="27dp"
                android:layout_gravity="end"
                android:layout_marginTop="15dp"
                android:layout_marginEnd="21dp"
                android:background="#0F49A3"
                android:gravity="center"
                android:text="₹ 575/month*"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="10sp" />

            <View
                android:id="@+id/download"
                android:layout_width="20dp"
                android:layout_height="14dp"
                android:layout_gravity="end"
                android:layout_marginTop="60dp"
                android:layout_marginEnd="21dp"
                android:background="@drawable/ic_baseline_download_24"
                android:gravity="center"
                android:padding="10dp"
                android:text="₹ 575/month*"
                android:textColor="@color/white"
                android:textSize="12sp" />

        </androidx.cardview.widget.CardView>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:layout_gravity="bottom|center"
            android:gravity="center"
            android:text="Multiple Restoration | Free Health Checkup | Day Care"
            android:textColor="#808191"
            android:textSize="10sp" />

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/category_icon"
        android:layout_width="10dp"
        android:layout_height="10dp"
        android:background="@drawable/ic_baseline_house_24"
        android:clickable="false" />
</FrameLayout>