<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/blue_background"
    android:orientation="vertical"
    tools:context=".ui.pages.checkout.CheckoutOneFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingHorizontal="30dp">

        <androidx.cardview.widget.CardView
            android:layout_width="130dp"
            android:layout_height="100dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="50dp"
            app:cardCornerRadius="10dp"
            app:cardElevation="10dp">

            <ImageView
                android:id="@+id/image"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/img" />
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:layout_marginTop="-50dp"
            android:backgroundTint="#0F49A3"
            app:cardCornerRadius="10dp">

            <TextView
                android:id="@+id/tittle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="70dp"
                android:gravity="center"
                android:text="Care super NBF insurance  premiums"
                android:textColor="@color/white"
                android:textSize="17sp" />

            <TextView
                android:id="@+id/max_money"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="106dp"
                android:gravity="center"
                android:text="$35,643"
                android:textColor="#FFC700"
                android:textSize="34sp" />

            <TextView
                android:id="@+id/detail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="166dp"
                android:background="#1D5CBC"
                android:paddingHorizontal="10dp"
                android:paddingVertical="5dp"
                android:text="Members 1 adult"
                android:textColor="@color/white" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="210dp"
                android:text="Period"
                android:textColor="@color/white"
                android:textSize="12sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="230dp"
                android:orientation="horizontal"
                android:layout_marginStart="10dp">

                <TextView
                    android:id="@+id/start_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="10 May 2021"
                    android:textColor="@color/white"
                    android:textSize="15sp" />

                <View
                    android:layout_width="75dp"
                    android:layout_height="5dp"
                    android:background="@drawable/line"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:layout_gravity="center" />

                <TextView
                    android:id="@+id/end_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="10 May 2021"
                    android:textColor="@color/white"
                    android:textSize="15sp" />
            </LinearLayout>


        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="58dp"
            android:layout_marginTop="-30dp"
            android:backgroundTint="#133E81"
            app:cardCornerRadius="10dp">

            <View
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="center_vertical"
                android:background="@drawable/ic_person_image"
                android:layout_marginStart="26dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="In the Name of"
                android:textColor="#808080"
                android:layout_marginStart="58dp"
                android:layout_marginTop="10dp"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/name"
                android:layout_width="wrap_content"
                android:maxWidth="100dp"
                android:layout_height="wrap_content"
                android:text="sam"
                android:textColor="@color/white"
                android:layout_marginStart="58dp"
                android:layout_marginTop="28dp"
                android:textSize="15sp" />

            <View
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="center_vertical"
                android:background="@drawable/dolar"
                android:layout_marginStart="179dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Premium"
                android:textColor="#808080"
                android:layout_marginStart="216dp"
                android:layout_marginTop="10dp"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/money"
                android:layout_width="wrap_content"
                android:maxWidth="100dp"
                android:layout_height="wrap_content"
                android:text="$35,643"
                android:textColor="@color/white"
                android:layout_marginStart="216dp"
                android:layout_marginTop="28dp"
                android:textSize="15sp" />
        </androidx.cardview.widget.CardView>

    </LinearLayout>

</LinearLayout>