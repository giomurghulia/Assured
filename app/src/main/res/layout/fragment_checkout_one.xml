<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/blue_background"
    android:orientation="vertical"
    tools:context=".ui.checkout.CheckoutOneFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingHorizontal="30dp">

        <androidx.cardview.widget.CardView
            android:layout_width="130dp"
            android:layout_height="100dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="50dp"
            app:cardElevation="10dp"
            app:cardCornerRadius="10dp">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/img" />
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:layout_marginTop="-50dp"
            android:backgroundTint="#0F49A3"
            app:cardCornerRadius="10dp"
            >

            <TextView
                android:id="@+id/tittle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Care super NBF insurance  premiums"
                android:layout_marginTop="70dp"
                android:layout_marginHorizontal="20dp"
                android:gravity="center"
                android:textColor="@color/white"
                android:textSize="17sp"
                />
            <TextView
                android:id="@+id/max_money"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="$35,643"
                android:layout_marginTop="106dp"
                android:layout_marginHorizontal="20dp"
                android:gravity="center"
                android:layout_gravity="center_horizontal"
                android:textColor="#FFC700"
                android:textSize="34sp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="166dp"
                android:layout_gravity="center_horizontal"
                android:paddingVertical="5dp"
                android:paddingHorizontal="10dp"
                android:background="#1D5CBC"
                android:text="Members 1 adult"
                android:textColor="@color/white"
                />



        </androidx.cardview.widget.CardView>
    </LinearLayout>
</LinearLayout>