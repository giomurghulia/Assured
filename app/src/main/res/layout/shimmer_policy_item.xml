<?xml version="1.0" encoding="utf-8"?>
<com.facebook.shimmer.ShimmerFrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="30dp"
    android:layout_marginTop="15dp"
    app:shimmer_auto_start="true">

<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/shape_rectangle"
    android:backgroundTint="@color/shimmer_color_Light_Grey"
    android:padding="10dp">

    <View
        android:id="@+id/icon_image"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:backgroundTint="@color/shimmer_color_Dark_Grey"
        android:background="@drawable/shape_rectangle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/title_text"
        android:layout_width="150dp"
        android:layout_height="10dp"
        android:layout_marginStart="10dp"
        android:background="@color/shimmer_color_Dark_Grey"
        app:layout_constraintStart_toEndOf="@id/icon_image"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/type_text"
        android:layout_width="100dp"
        android:layout_height="10dp"
        android:layout_marginTop="5dp"
        android:background="@color/shimmer_color_Dark_Grey"
        android:layout_marginStart="10dp"
        app:layout_constraintStart_toEndOf="@id/icon_image"
        app:layout_constraintTop_toBottomOf="@id/title_text"/>

</androidx.constraintlayout.widget.ConstraintLayout>
</com.facebook.shimmer.ShimmerFrameLayout>