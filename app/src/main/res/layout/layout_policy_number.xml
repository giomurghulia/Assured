<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="30dp"
    android:layout_marginTop="30dp">

    <View
        android:id="@+id/num_background"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:background="@drawable/shape_circle"
        android:backgroundTint="@color/blue"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/policy_num_text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textColor="@color/white"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="@id/num_background"
        app:layout_constraintEnd_toEndOf="@id/num_background"
        app:layout_constraintStart_toStartOf="@id/num_background"
        app:layout_constraintTop_toTopOf="@id/num_background"
        tools:text="10" />

    <TextView
        android:id="@+id/policies_title_text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="policies"
        android:textColor="@color/gray"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="@id/num_background"
        app:layout_constraintStart_toStartOf="@id/num_background"
        app:layout_constraintTop_toBottomOf="@id/policy_num_text" />

    <TextView
        android:id="@+id/house_num_text"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_marginStart="30dp"
        android:backgroundTint="#39A0B7"
        android:background="@drawable/shape_rectangle"
        android:gravity="center"
        android:textColor="@color/white"
        app:layout_constraintBottom_toTopOf="@id/health_num_text"
        app:layout_constraintStart_toEndOf="@id/num_background"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="10" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:text="House Insurance"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="@id/house_num_text"
        app:layout_constraintStart_toEndOf="@id/house_num_text"
        app:layout_constraintTop_toTopOf="@id/house_num_text" />

    <TextView
        android:id="@+id/health_num_text"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_marginStart="30dp"
        android:backgroundTint="#3E3BC6"
        android:background="@drawable/shape_rectangle"
        android:gravity="center"
        android:textColor="@color/white"
        app:layout_constraintBottom_toTopOf="@id/car_num_text"
        app:layout_constraintStart_toEndOf="@id/num_background"
        app:layout_constraintTop_toBottomOf="@id/house_num_text"
        tools:text="10" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:text="Health Insurance"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="@id/health_num_text"
        app:layout_constraintStart_toEndOf="@id/health_num_text"
        app:layout_constraintTop_toTopOf="@id/health_num_text" />

    <TextView
        android:id="@+id/car_num_text"
        android:layout_width="45dp"
        android:backgroundTint="#0064FE"
        android:layout_height="45dp"
        android:layout_marginStart="30dp"
        android:background="@drawable/shape_rectangle"
        android:gravity="center"
        android:textColor="@color/white"
        app:layout_constraintBottom_toTopOf="@id/pet_num_text"
        app:layout_constraintStart_toEndOf="@id/num_background"
        app:layout_constraintTop_toBottomOf="@id/health_num_text"
        tools:text="10" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:text="Car Insurance"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="@id/car_num_text"
        app:layout_constraintStart_toEndOf="@id/car_num_text"
        app:layout_constraintTop_toTopOf="@id/car_num_text" />

    <TextView
        android:id="@+id/pet_num_text"
        android:layout_width="45dp"
        android:backgroundTint="#B4C988"
        android:layout_height="45dp"
        android:layout_marginStart="30dp"
        android:background="@drawable/shape_rectangle"
        android:gravity="center"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/num_background"
        app:layout_constraintTop_toBottomOf="@id/car_num_text"
        tools:text="10" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:text="Pet Insurance"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="@id/pet_num_text"
        app:layout_constraintStart_toEndOf="@id/pet_num_text"
        app:layout_constraintTop_toTopOf="@id/pet_num_text" />
</androidx.constraintlayout.widget.ConstraintLayout>