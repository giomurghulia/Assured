<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    android:layout_marginHorizontal="30dp"
    android:background="@drawable/shape_category_background"
    android:backgroundTint="@color/light_gray">

    <TextView
        android:id="@+id/title_text"
        android:textColor="@color/white"
        android:layout_width="0dp"
        android:gravity="center"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="5dp"
        android:text="Tell us what needs protected"
        app:layout_constraintBottom_toTopOf="@id/find_button"
        app:layout_constraintEnd_toStartOf="@id/banner_image"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/find_button"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:background="@drawable/shape_button_background"
        android:backgroundTint="@color/blue"
        android:text="@string/find_plans"
        android:textAllCaps="false"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/banner_image"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/title_text" />

    <ImageView
        android:id="@+id/banner_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scaleType="centerInside"
        android:src="@drawable/ic_auto_insurance_banner"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>