<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_nav_graph"
    app:startDestination="@id/welcomeFragment">

    <fragment
        android:id="@+id/welcomeFragment"
        android:name="com.insurance.assured.ui.welcome.WelcomeFragment"
        android:label="WelcomeFragment" >
        <action
            android:id="@+id/action_welcomeFragment_to_authorizedFragment"
            app:destination="@id/authorizedFragment" />
        <action
            android:id="@+id/action_welcomeFragment_to_passCodeFragment"
            app:destination="@id/passCodeFragment" />
    </fragment>
    <action
        android:id="@+id/action_global_welcomeFragment"
        app:destination="@id/welcomeFragment"
        app:popUpTo="@id/main_nav_graph"
        app:popUpToInclusive="true" />
    <fragment
        android:id="@+id/authorizedFragment"
        android:name="com.insurance.assured.ui.authorized.AuthorizedFragment"
        android:label="AuthorizedFragment" />
    <fragment
        android:id="@+id/signInFragment"
        android:name="com.insurance.assured.ui.signIn.SignInFragment"
        android:label="SignInFragment" >
        <action
            android:id="@+id/action_signInFragment_to_authorizedFragment"
            app:destination="@id/authorizedFragment" />
    </fragment>
    <fragment
        android:id="@+id/signUpFragment"
        android:name="com.insurance.assured.ui.signUp.SignUpFragment"
        android:label="SignUpFragment" >
        <action
            android:id="@+id/action_signUpFragment_to_authorizedFragment"
            app:destination="@id/authorizedFragment" />
    </fragment>

    <action
        android:id="@+id/action_global_signInFragment"
        app:destination="@id/signInFragment"
        app:popUpTo="@id/main_nav_graph"
        app:popUpToInclusive="true" />

    <action
        android:id="@+id/action_global_signUpFragment"
        app:destination="@id/signUpFragment"
        app:popUpTo="@id/main_nav_graph"
        app:popUpToInclusive="true" />

    <fragment
        android:id="@+id/passCodeFragment"
        android:name="com.insurance.assured.ui.pascode.PassCodeFragment"
        android:label="PassCodeFragment" >
        <action
            android:id="@+id/action_passCodeFragment_to_authorizedFragment"
            app:destination="@id/authorizedFragment" />
    </fragment>
</navigation>